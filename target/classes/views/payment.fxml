<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PaymentController" 
      spacing="20" style="-fx-background-color: #f5f5f5;" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text text="Payment" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>

    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Event Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        
        <HBox spacing="10">
            <Label text="Event:" style="-fx-font-weight: bold;"/>
            <Label fx:id="eventNameLabel"/>
        </HBox>
        
        <HBox spacing="10">
            <Label text="Price:" style="-fx-font-weight: bold;"/>
            <Label fx:id="priceLabel"/>
        </HBox>

        <Separator/>

        <Label text="Payment Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        
        <VBox spacing="10">
            <Label text="Card Number"/>
            <TextField fx:id="cardNumberField" promptText="1234 5678 9012 3456"/>
            
            <HBox spacing="10">
                <VBox>
                    <Label text="Expiry Date"/>
                    <TextField fx:id="expiryDateField" promptText="MM/YY"/>
                </VBox>
                <VBox>
                    <Label text="CVV"/>
                    <TextField fx:id="cvvField" promptText="123"/>
                </VBox>
            </HBox>
            
            <Label text="Cardholder Name"/>
            <TextField fx:id="cardholderNameField" promptText="John Doe"/>
        </VBox>

        <Button fx:id="payButton" text="Pay Now" 
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </VBox>

    <Button fx:id="backButton" text="Back" 
            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
</VBox> 