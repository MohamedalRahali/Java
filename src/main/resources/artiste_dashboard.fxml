<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-padding: 30; -fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.ArtisteDashboardController">

    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10;">
        <Label fx:id="welcomeLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1a3c34;" text="Bienvenue, Artiste" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="logoutButton" onAction="#handleLogout" prefHeight="40" prefWidth="140" style="-fx-font-size: 14px;" text="Déconnexion">
            <tooltip>
                <Tooltip text="Se déconnecter de l'application" />
            </tooltip>
        </Button>
    </HBox>

    <TabPane fx:id="tabPane" style="-fx-padding: 15 0 0 0;" tabClosingPolicy="UNAVAILABLE">
        <!-- Onglet Produits -->
        <Tab onSelectionChanged="#onclickp" text="Produits">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1a3c34;" text="Gestion des Produits" />

                <SplitPane orientation="VERTICAL">
                    <TableView fx:id="produitsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="titreColumn" prefWidth="250" text="Titre" />
                            <TableColumn fx:id="prixColumn" prefWidth="150" text="Prix" />
                            <TableColumn fx:id="descriptionColumn" prefWidth="400" text="Description" />
                        </columns>
                    </TableView>
                </SplitPane>
            </VBox>
        </Tab>

        <!-- Onglet Catégories -->
        <Tab onSelectionChanged="#onclickc" text="Catégories">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1a3c34;" text="Gestion des Catégories" />

                <SplitPane orientation="VERTICAL">
                    <TableView fx:id="categoriesTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="libelleColumn" prefWidth="300" text="Libellé" />
                            <TableColumn fx:id="categorieDescriptionColumn" prefWidth="500" text="Description" />
                        </columns>
                    </TableView>
                </SplitPane>
            </VBox>
        </Tab>
    </TabPane>
</VBox>
