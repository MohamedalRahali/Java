<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" 
            xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controllers.AfficherBlogs"
            stylesheets="@../styles/styles.css">
    <children>
        <!-- Zone d'en-tête -->
        <VBox spacing="20" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- En-tête -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="header">
                <FontIcon iconLiteral="fas-blog" iconSize="24" styleClass="header-icon"/>
                <Label text="Liste des Blogs" styleClass="header-title">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
            </HBox>

            <!-- Liste des blogs -->
            <ListView fx:id="listView" VBox.vgrow="ALWAYS" styleClass="blog-list"/>

            <!-- Barre d'actions -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button onAction="#retourAjoutBlog" styleClass="action-button">
                    <graphic>
                        <HBox spacing="5" alignment="CENTER">
                            <FontIcon iconLiteral="fas-plus-circle" iconSize="16"/>
                            <Label text="Ajouter un blog" style="-fx-text-fill: white;"/>
                        </HBox>
                    </graphic>
                </Button>

                <Button onAction="#display" styleClass="refresh-button">
                    <graphic>
                        <HBox spacing="5" alignment="CENTER">
                            <FontIcon iconLiteral="fas-sync-alt" iconSize="16"/>
                            <Label text="Actualiser" style="-fx-text-fill: white;"/>
                        </HBox>
                    </graphic>
                </Button>

                <Button onAction="#goToTypes" styleClass="types-button">
                    <graphic>
                        <HBox spacing="5" alignment="CENTER">
                            <FontIcon iconLiteral="fas-tags" iconSize="16"/>
                            <Label text="Types" style="-fx-text-fill: white;"/>
                        </HBox>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </children>
</AnchorPane>