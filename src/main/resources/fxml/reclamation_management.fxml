<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.ReclamationManagementController"
      styleClass="main-container">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Gestion des réclamations" styleClass="title-label"/>

    <VBox spacing="10" alignment="CENTER">
        <Button text="Créer une réclamation" onAction="#goToCreateReclamation" styleClass="button-primary"/>
        <Button text="Modifier une réclamation" onAction="#goToModifyReclamation" styleClass="button-primary"/>
        <Button text="Supprimer une réclamation" onAction="#goToDeleteReclamation" styleClass="button-danger"/>
        <Button text="Retour" onAction="#goBackToHome" styleClass="button-secondary"/>
    </VBox>

</VBox> 