<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.ModifyEventController"
            prefHeight="700.0" prefWidth="1200.0" minHeight="400.0" minWidth="700.0" maxHeight="-1.0" maxWidth="-1.0"
            style="-fx-background-color: #f8fafc;"
            stylesheets="@backborad.css">
    <children>
        <!-- Admin Bar Include -->
        <fx:include source="/fxml/AdminBar.fxml" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

        <!-- Sidebar under Top Bar -->
        <VBox spacing="0" prefWidth="200" style="-fx-background-color: #00b4d8; -fx-background-radius: 0 24 24 0; -fx-padding: 36 0 0 0; -fx-min-width: 200; -fx-max-width: 200; -fx-pref-width: 200;" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="60.0" AnchorPane.bottomAnchor="0.0">
            <VBox alignment="CENTER" spacing="16" style="-fx-padding: 0 0 20 0;">
                <Label text="Navigator Bar" styleClass="sidebar-title" style="-fx-font-size: 30px; -fx-font-family: 'Serif'; -fx-font-weight: bold; -fx-text-fill: #fff; -fx-padding: 16 0 24 0;" alignment="CENTER" />
            </VBox>
            <Separator style="-fx-background-color: #314060;"/>
            <VBox spacing="8" style="-fx-padding: 20 0 0 0;">
                <Button text="Create Event" styleClass="sidebar-link" onAction="#goToCreateEvent" />
                <Button text="Event Types" styleClass="sidebar-link" onAction="#goToTypeEventManagement" />
                <Button text="Statistics" styleClass="sidebar-link" onAction="#goToStatistics" />
            </VBox>
        </VBox>

        <!-- Main Content Area for Event Modification -->
        <VBox spacing="20" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0" AnchorPane.bottomAnchor="0.0" style="-fx-padding: 30 40 30 40;">
            <!-- Top Bar -->
            <HBox alignment="CENTER_RIGHT" spacing="12" style="-fx-padding: 0 0 20 0;">
                <Label text="Modify Event" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #314060;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Back to Events" onAction="#goBackToEventView" style="-fx-background-color: #b0b0b0; -fx-text-fill: #314060; -fx-font-weight: bold; -fx-background-radius: 10;"/>
            </HBox>

            <!-- Form for Modifying Event -->
            <GridPane hgap="20" vgap="16" style="-fx-background-color: white; -fx-padding: 32; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, #31406022, 8, 0, 0, 0);">
                <columnConstraints>
                    <ColumnConstraints minWidth="150"/>
                    <ColumnConstraints minWidth="300"/>
                    <ColumnConstraints minWidth="40"/>
                    <ColumnConstraints minWidth="200"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="36"/>
                    <RowConstraints minHeight="36"/>
                    <RowConstraints minHeight="36"/>
                    <RowConstraints minHeight="36"/>
                    <RowConstraints minHeight="36"/>
                    <RowConstraints minHeight="36"/>
                    <RowConstraints minHeight="36"/>
                    <RowConstraints minHeight="36"/>
                </rowConstraints>

                <!-- Title -->
                <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="titleField" promptText="Event Title" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label fx:id="titleValidationIcon" text="✔" style="-fx-text-fill: #43bfae;" GridPane.rowIndex="0" GridPane.columnIndex="2" />
                <Label fx:id="titleErrorLabel" text="" style="-fx-text-fill: #e74c3c;" GridPane.rowIndex="0" GridPane.columnIndex="3" />

                <!-- Date -->
                <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <DatePicker fx:id="datePicker" promptText="Select Date" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <Label fx:id="dateValidationIcon" text="✔" style="-fx-text-fill: #43bfae;" GridPane.rowIndex="1" GridPane.columnIndex="2" />
                <Label fx:id="dateErrorLabel" text="" style="-fx-text-fill: #e74c3c;" GridPane.rowIndex="1" GridPane.columnIndex="3" />

                <!-- Description -->
                <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextArea fx:id="descriptionArea" promptText="Event Description" GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="2" />
                <Label fx:id="descriptionValidationIcon" text="✔" style="-fx-text-fill: #43bfae;" GridPane.rowIndex="2" GridPane.columnIndex="2" />
                <Label fx:id="descriptionErrorLabel" text="" style="-fx-text-fill: #e74c3c;" GridPane.rowIndex="2" GridPane.columnIndex="3" />

                <!-- Location -->
                <Label text="Location:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="lieuxField" promptText="Event Location" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                <Label fx:id="lieuxValidationIcon" text="✔" style="-fx-text-fill: #43bfae;" GridPane.rowIndex="3" GridPane.columnIndex="2" />
                <Label fx:id="lieuxErrorLabel" text="" style="-fx-text-fill: #e74c3c;" GridPane.rowIndex="3" GridPane.columnIndex="3" />

                <!-- Status -->
                <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <ChoiceBox fx:id="statusChoiceBox" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                <Label fx:id="statusValidationIcon" text="✔" style="-fx-text-fill: #43bfae;" GridPane.rowIndex="4" GridPane.columnIndex="2" />
                <Label fx:id="statusErrorLabel" text="" style="-fx-text-fill: #e74c3c;" GridPane.rowIndex="4" GridPane.columnIndex="3" />

                <!-- Duration -->
                <Label text="Duration:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <TextField fx:id="dureeField" promptText="Duration (e.g., 2h)" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                <Label fx:id="dureeValidationIcon" text="✔" style="-fx-text-fill: #43bfae;" GridPane.rowIndex="5" GridPane.columnIndex="2" />
                <Label fx:id="dureeErrorLabel" text="" style="-fx-text-fill: #e74c3c;" GridPane.rowIndex="5" GridPane.columnIndex="3" />

                <!-- Available Seats -->
                <Label text="Available Seats:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                <Spinner fx:id="nbPlaceSpinner" GridPane.rowIndex="6" GridPane.columnIndex="1" />
                <Label fx:id="nbPlacesValidationIcon" text="✔" style="-fx-text-fill: #43bfae;" GridPane.rowIndex="6" GridPane.columnIndex="2" />
                <Label fx:id="nbPlacesErrorLabel" text="" style="-fx-text-fill: #e74c3c;" GridPane.rowIndex="6" GridPane.columnIndex="3" />

                <!-- Event Type -->
                <Label text="Event Type:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                <ComboBox fx:id="typeEventComboBox" promptText="Select Event Type" GridPane.rowIndex="7" GridPane.columnIndex="1" />
                <Label fx:id="typeEventValidationIcon" text="✔" style="-fx-text-fill: #43bfae;" GridPane.rowIndex="7" GridPane.columnIndex="2" />
                <Label fx:id="typeEventErrorLabel" text="" style="-fx-text-fill: #e74c3c;" GridPane.rowIndex="7" GridPane.columnIndex="3" />
            </GridPane>

            <!-- Save Button -->
            <HBox alignment="CENTER_RIGHT" spacing="16">
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Save Changes" onAction="#saveModifications" style="-fx-background-color: #43bfae; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 12; -fx-font-weight: bold; -fx-padding: 10 36;" />
            </HBox>

            <!-- Footer -->
            <Label alignment="CENTER" text=" 2025 Wings Solutions" styleClass="wings-title-footer"/>
        </VBox>
    </children>
</AnchorPane>
