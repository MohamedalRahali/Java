<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="20"
      alignment="CENTER"
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">

    <Label text="Gestion des Blogs"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <VBox spacing="10" alignment="CENTER">
        <Button text="Créer un Blog"
                onAction="#goToCreateBlog"
                style="-fx-font-size: 14px; -fx-pref-width: 200px;"/>

        <Button text="Modifier un Blog"
                onAction="#goToModifyBlog"
                style="-fx-font-size: 14px; -fx-pref-width: 200px;"/>

        <Button text="Supprimer un Blog"
                onAction="#goToDeleteBlog"
                style="-fx-font-size: 14px; -fx-pref-width: 200px;"/>
    </VBox>

    <Button text="Retour à l'accueil"
            onAction="#goBackToHome"
            style="-fx-font-size: 12px; -fx-pref-width: 150px;"/>
</VBox>