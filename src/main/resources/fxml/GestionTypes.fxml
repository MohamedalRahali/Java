<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GestionTypesController">
    <children>
        <!-- Left Sidebar -->
        <VBox styleClass="sidebar" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <!-- Logo Section -->
            <VBox alignment="CENTER" styleClass="logo-container" prefHeight="100.0">
                <FontIcon iconLiteral="fas-layer-group" iconSize="40" styleClass="logo-icon"/>
            </VBox>
            
            <!-- Navigation Buttons -->
            <VBox spacing="5" styleClass="nav-buttons-container">
                <Button styleClass="nav-button" onAction="#handleTypesAction">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <FontIcon iconLiteral="fas-layer-group" iconSize="16"/>
                            <Label text="Types" styleClass="nav-label"/>
                        </HBox>
                    </graphic>
                </Button>
                <Button styleClass="nav-button" onAction="#handleBlogsAction">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <FontIcon iconLiteral="fas-blog" iconSize="16"/>
                            <Label text="Blogs" styleClass="nav-label"/>
                        </HBox>
                    </graphic>
                </Button>
            </VBox>
        </VBox>

        <!-- Main Content -->
        <VBox spacing="20" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="content-header">
                <FontIcon iconLiteral="fas-layer-group" iconSize="24" styleClass="header-icon"/>
                <VBox>
                    <Label text="Gestion des Types" styleClass="header-title"/>
                    <Label text="Gérez les types de blogs" styleClass="header-subtitle"/>
                </VBox>
            </HBox>

            <!-- Form Container -->
            <VBox styleClass="form-container" spacing="15">
                <HBox styleClass="form-group" alignment="CENTER_LEFT" spacing="10">
                    <FontIcon iconLiteral="fas-tag" styleClass="form-icon"/>
                    <Label text="Libellé du Type *" styleClass="form-label"/>
                    <TextField fx:id="libelleField" styleClass="form-field" promptText="Entrez le libellé du type" HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Action Buttons -->
                <HBox spacing="10">
                    <Button onAction="#handleAdd" styleClass="add-button">
                        <graphic>
                            <HBox spacing="5" alignment="CENTER">
                                <FontIcon iconLiteral="fas-plus"/>
                                <Label text="Ajouter" style="-fx-text-fill: white;"/>
                            </HBox>
                        </graphic>
                    </Button>
                    <Button onAction="#handleModify" styleClass="edit-button">
                        <graphic>
                            <HBox spacing="5" alignment="CENTER">
                                <FontIcon iconLiteral="fas-edit"/>
                                <Label text="Modifier" style="-fx-text-fill: white;"/>
                            </HBox>
                        </graphic>
                    </Button>
                    <Button onAction="#handleDelete" styleClass="delete-button">
                        <graphic>
                            <HBox spacing="5" alignment="CENTER">
                                <FontIcon iconLiteral="fas-trash"/>
                                <Label text="Supprimer" style="-fx-text-fill: white;"/>
                            </HBox>
                        </graphic>
                    </Button>
                    <Button onAction="#handleClear" styleClass="clear-button">
                        <graphic>
                            <HBox spacing="5" alignment="CENTER">
                                <FontIcon iconLiteral="fas-broom"/>
                                <Label text="Vider" style="-fx-text-fill: white;"/>
                            </HBox>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>

            <!-- Types List -->
            <ListView fx:id="typesListView" styleClass="types-list" VBox.vgrow="ALWAYS"/>
        </VBox>
    </children>
</AnchorPane>