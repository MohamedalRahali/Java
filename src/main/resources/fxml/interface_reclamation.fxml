<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.ReclamationManagementController"
      styleClass="main-container">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Gestion des RÃ©clamations" styleClass="title-label"/>

    <TableView fx:id="reclamationTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colTitle" text="Titre" prefWidth="200.0"/>
            <TableColumn fx:id="colDescription" text="Description" prefWidth="400.0"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter" onAction="#goToCreateReclamation" styleClass="button-primary"/>
