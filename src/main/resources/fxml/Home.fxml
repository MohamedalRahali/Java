<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.lang.String?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.HomeController"
            prefHeight="500.0" prefWidth="700.0"
            style="-fx-background-color: linear-gradient(to bottom right, #2d1f17, #4d3428);">

    <children>
        <!-- En-tête avec logo et titre -->
        <VBox alignment="CENTER" layoutX="0.0" layoutY="10.0" prefWidth="700.0" spacing="15.0">
            <!-- Logo artistique (placeholder) -->
            <ImageView fitHeight="120.0" fitWidth="120.0" preserveRatio="true">
                <image>
                    <Image url="@/images/art_logo.png"/>
                </image>
                <effect>
                    <DropShadow color="#f9c89b" radius="15.0" spread="0.3"/>
                </effect>
            </ImageView>

            <!-- Titre du dashboard avec effet d'ombre -->
            <Label text="🎨 Dashboard ArtConnect"
                   style="-fx-text-fill: #f9c89b; -fx-padding: 10 0 20 0;">
                <font>
                    <Font name="Georgia Bold" size="32.0"/>
                </font>
                <effect>
                    <DropShadow color="#00000080" radius="5.0" spread="0.1"/>
                </effect>
            </Label>
        </VBox>

        <!-- Conteneur pour les boutons -->
        <VBox alignment="CENTER" layoutX="175.0" layoutY="200.0" prefWidth="350.0" spacing="25.0">
            <!-- Bouton Espace Client -->
            <Button text="👤 Espace Client"
                    onAction="#handleClientSpace"
                    prefHeight="60.0" prefWidth="250.0"
                    style="-fx-background-color: #e1701a;
                           -fx-text-fill: #fff3e0;
                           -fx-font-size: 18px;
                           -fx-background-radius: 12px;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;">
                <effect>
                    <DropShadow color="#00000080" radius="8.0" spread="0.15"/>
                </effect>
                <styleClass>
                    <String fx:value="animated-button"/>
                    <String fx:value="create-button"/>
                </styleClass>
            </Button>

            <!-- Bouton de visualisation des réclamations -->
            <Button text="📋 Voir les Réclamations"
                    onAction="#goToReclamationView"
                    prefHeight="60.0" prefWidth="250.0"
                    style="-fx-background-color: #a0522d;
                           -fx-text-fill: #ffe0bd;
                           -fx-font-size: 18px;
                           -fx-background-radius: 12px;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;">
                <effect>
                    <DropShadow color="#00000080" radius="8.0" spread="0.15"/>
                </effect>
                <styleClass>
                    <String fx:value="animated-button"/>
                    <String fx:value="view-button"/>
                </styleClass>
            </Button>

            <!-- Boutons d'action -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="typeReclamationButton" onAction="#handleTypeReclamation" 
                        text="⚙️ Types des réclamations"
                        prefHeight="60.0" prefWidth="250.0"
                        style="-fx-background-color: #a0522d;
                               -fx-text-fill: #ffe0bd;
                               -fx-font-size: 18px;
                               -fx-background-radius: 12px;
                               -fx-font-weight: bold;
                               -fx-cursor: hand;">
                    <effect>
                        <DropShadow color="#00000080" radius="8.0" spread="0.15"/>
                    </effect>
                    <styleClass>
                        <String fx:value="animated-button"/>
                    </styleClass>
                </Button>
            </HBox>
        </VBox>

        <!-- Pied de page -->
        <Label layoutX="245.0" layoutY="460.0" text="© 2025  Wings soultions"
               style="-fx-text-fill: #d3a27f; -fx-font-style: italic;">
            <font>
                <Font name="Georgia" size="14.0"/>
            </font>
        </Label>
    </children>

    <!-- Styles CSS -->
    <stylesheets>
        <String fx:value="@../styles/styles.css"/>
    </stylesheets>
</AnchorPane>