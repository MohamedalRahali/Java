<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="20"
      alignment="CENTER"
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">

    <Label text="Application de Gestion de Blogs"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <VBox spacing="15" alignment="CENTER">
        <Button text="Voir tous les Blogs"
                onAction="#goToBlogView"
                style="-fx-font-size: 14px; -fx-pref-width: 200px;"/>

        <Button text="Créer un Nouveau Blog"
                onAction="#goToCreateBlog"
                style="-fx-font-size: 14px; -fx-pref-width: 200px;"/>

        <Button text="Gestion Avancée des Blogs"
                onAction="#goToBlogManagement"
                style="-fx-font-size: 14px; -fx-pref-width: 200px;"/>
    </VBox>

    <Label text="© 2023 Mon Application de Blogs"
           style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
</VBox>