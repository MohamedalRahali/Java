<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="20"
      style="-fx-padding: 20;">

    <Label text="Gestion des Blogs" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="300"/>
        </columnConstraints>

        <!-- Formulaire de création -->
        <Label text="Titre*:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="tfTitre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Description*:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="taDescription" GridPane.rowIndex="1" GridPane.columnIndex="1"
                  prefRowCount="4" wrapText="true"/>

        <Label text="Date Publication:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpDatePub" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Type*:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="tfType" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <Button text="Ajouter" onAction="#ajouterBlog"
                    style="-fx-font-size: 14; -fx-pref-width: 100;"/>
            <Button text="Effacer" onAction="#clearFields"
                    style="-fx-font-size: 14; -fx-pref-width: 100;"/>
        </HBox>
    </GridPane>

    <!-- Tableau des blogs -->
    <TableView fx:id="blogTable" style="-fx-font-size: 14;">
        <columns>
            <TableColumn fx:id="colTitre" text="Titre" prefWidth="150"/>
            <TableColumn fx:id="colDescription" text="Description" prefWidth="250"/>
            <TableColumn fx:id="colDateCrea" text="Date Création" prefWidth="120"/>
            <TableColumn fx:id="colDatePub" text="Date Publication" prefWidth="120"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Boutons d'actions -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Modifier" onAction="#modifierBlog"
                style="-fx-font-size: 14; -fx-pref-width: 100;"/>
        <Button text="Supprimer" onAction="#supprimerBlog"
                style="-fx-font-size: 14; -fx-pref-width: 100;"/>
    </HBox>

    <Label text="* Champs obligatoires" style="-fx-font-style: italic;"/>
</VBox>