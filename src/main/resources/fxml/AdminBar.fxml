<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="24" alignment="CENTER_LEFT" style="-fx-background-color: #111; -fx-padding: 0 40 0 0; -fx-min-height: 60;" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AdminBarController">
    <Label text="Wings Solution"
           style="-fx-text-fill: #ff9800; -fx-font-size: 24px; -fx-font-family: 'Segoe UI', 'Arial', 'Verdana', 'Helvetica', 'Sans-Serif'; -fx-font-weight: 900; -fx-padding: 0 24 0 24; -fx-letter-spacing: 1.5px;" />
    <Button text="User" styleClass="topbar-link" style="-fx-background-color: transparent; -fx-text-fill: #fff; -fx-font-size: 16px; -fx-font-weight: bold;" onAction="#goToAdminHome" />
    <Button text="Event" styleClass="topbar-link" style="-fx-background-color: transparent; -fx-text-fill: #fff; -fx-font-size: 16px; -fx-font-weight: bold;" onAction="#goToEventView" />
    <Button text="Reclamation" styleClass="topbar-link" style="-fx-background-color: transparent; -fx-text-fill: #fff; -fx-font-size: 16px; -fx-font-weight: bold;" onAction="#goToHomeReclamation" />
    <Button text="Product" styleClass="topbar-link" style="-fx-background-color: transparent; -fx-text-fill: #fff; -fx-font-size: 16px; -fx-font-weight: bold;" />
    <Button text="Blog" styleClass="topbar-link" style="-fx-background-color: transparent; -fx-text-fill: #fff; -fx-font-size: 16px; -fx-font-weight: bold;" />
    <Button text="Formation" styleClass="topbar-link" style="-fx-background-color: transparent; -fx-text-fill: #fff; -fx-font-size: 16px; -fx-font-weight: bold;" />
    <Pane HBox.hgrow="ALWAYS" />
    <Label fx:id="userEmailLabel" text="Logged in as: " style="-fx-text-fill: #f5cfa3; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 0 24 0 0;" />
    <Button fx:id="logoutButton" text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: #fff; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 5 20 5 20;" onAction="#logout" />
</HBox>
