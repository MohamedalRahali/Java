<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<?import java.lang.String?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.ReclamationViewController"
      style="-fx-background-color: linear-gradient(to bottom right, #2d1f17, #4d3428);">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- En-t√™te avec titre -->
    <Label text="üìã Liste des R√©clamations"
           style="-fx-text-fill: #f9c89b; -fx-padding: 10 0 20 0;">
        <font>
            <Font name="Georgia Bold" size="32.0"/>
        </font>
        <effect>
            <DropShadow color="#00000080" radius="5.0" spread="0.1"/>
        </effect>
    </Label>

    <!-- Barre de recherche -->
    <HBox alignment="CENTER" spacing="10.0">
        <Label text="üîç:"
               style="-fx-text-fill: #f9c89b; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        <TextField fx:id="searchField"
                   prefWidth="300.0" prefHeight="40.0"
                   promptText="Entrez un titre √† rechercher..."
                   style="-fx-background-color: #ffffff;
                         -fx-text-fill: #000000;
                         -fx-font-size: 16px;
                         -fx-background-radius: 8px;
                         -fx-padding: 5px 10px;"/>
        <Button fx:id="sortButton"
                text="üîÑ Trier "
                onAction="#handleSort"
                prefHeight="40.0"
                style="-fx-background-color: #e1701a;
                       -fx-text-fill: #fff3e0;
                       -fx-font-size: 14px;
                       -fx-background-radius: 8px;
                       -fx-font-weight: bold;"/>
    </HBox>

    <!-- Liste des r√©clamations -->
    <ListView fx:id="reclamationListView"
              VBox.vgrow="ALWAYS"
              style="-fx-background-color: #ffffff;
                     -fx-background-radius: 8px;
                     -fx-padding: 10px;">
        <effect>
            <DropShadow color="#00000040" radius="5.0" spread="0.1"/>
        </effect>
    </ListView>

    <!-- Boutons d'action -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="‚úèÔ∏è Modifier"
                onAction="#handleEditReclamation"
                prefHeight="45.0" prefWidth="150.0"
                style="-fx-background-color: #e1701a;
                       -fx-text-fill: #fff3e0;
                       -fx-font-size: 16px;
                       -fx-background-radius: 12px;
                       -fx-font-weight: bold;
                       -fx-cursor: hand;">
            <effect>
                <DropShadow color="#00000080" radius="8.0" spread="0.15"/>
            </effect>
            <styleClass>
                <String fx:value="animated-button"/>
                <String fx:value="create-button"/>
            </styleClass>
        </Button>

        <Button text="üóëÔ∏è Supprimer"
                onAction="#handleDeleteReclamation"
                prefHeight="45.0" prefWidth="150.0"
                style="-fx-background-color: #8d4e2e;
                       -fx-text-fill: #ffe0bd;
                       -fx-font-size: 16px;
                       -fx-background-radius: 12px;
                       -fx-font-weight: bold;
                       -fx-cursor: hand;">
            <effect>
                <DropShadow color="#00000080" radius="8.0" spread="0.15"/>
            </effect>
            <styleClass>
                <String fx:value="animated-button"/>
                <String fx:value="stats-button"/>
            </styleClass>
        </Button>

        <Button text="‚Ü©Ô∏è Retour"
                onAction="#goBackToHome"
                prefHeight="45.0" prefWidth="150.0"
                style="-fx-background-color: #a0522d;
                       -fx-text-fill: #ffe0bd;
                       -fx-font-size: 16px;
                       -fx-background-radius: 12px;
                       -fx-font-weight: bold;
                       -fx-cursor: hand;">
            <effect>
                <DropShadow color="#00000080" radius="8.0" spread="0.15"/>
            </effect>
            <styleClass>
                <String fx:value="animated-button"/>
                <String fx:value="view-button"/>
            </styleClass>
        </Button>

        <Button text="üìä Statistique"
                fx:id="statButton"
                onAction="#handleShowStats"
                prefHeight="45.0" prefWidth="150.0"
                style="-fx-background-color: #4d3428;
                       -fx-text-fill: #ffe0bd;
                       -fx-font-size: 16px;
                       -fx-background-radius: 12px;
                       -fx-font-weight: bold;
                       -fx-cursor: hand;">
            <effect>
                <DropShadow color="#00000080" radius="8.0" spread="0.15"/>
            </effect>
            <styleClass>
                <String fx:value="animated-button"/>
                <String fx:value="stats-button"/>
            </styleClass>
        </Button>


    </HBox>

    <!-- Pied de page -->
    <Label text="¬© 2025 Wings solutions"
           style="-fx-text-fill: #d3a27f; -fx-font-style: italic;">
        <font>
            <Font name="Georgia" size="14.0"/>
        </font>
    </Label>

    <!-- Styles CSS -->
    <style>
        /* Styles g√©n√©raux */
        .root {
        -fx-font-family: 'Georgia', serif;
        }

        /* Animation des boutons au survol */
        .animated-button:hover {
        -fx-scale-x: 1.05;
        -fx-scale-y: 1.05;
        -fx-effect: dropshadow(gaussian, rgba(249, 200, 155, 0.6), 15, 0.3, 0, 0);
        }

        /* Styles sp√©cifiques pour chaque bouton */
        .create-button:hover {
        -fx-background-color: #f07b25 !important;
        }

        .view-button:hover {
        -fx-background-color: #b25c33 !important;
        }

        .stats-button:hover {
        -fx-background-color: #8d4e2e !important;
        }

        .reply-button:hover {
        -fx-background-color: #f07b25 !important;
        }

        /* Effet de pression du bouton */
        .animated-button:pressed {
        -fx-scale-x: 0.98;
        -fx-scale-y: 0.98;
        -fx-opacity: 0.9;
        }

        /* Style de la ListView */
        .list-view {
        -fx-background-color: #ffffff;
        -fx-font-size: 16px;
        -fx-font-weight: bold;
        }

        .list-view .list-cell {
        -fx-background-color: #ffffff;
        -fx-text-fill: #000000;
        -fx-font-size: 16px;
        -fx-font-weight: bold;
        -fx-padding: 15px;
        -fx-border-color: #cccccc;
        -fx-border-width: 0 0 1 0;
        }

        .list-view .list-cell:odd {
        -fx-background-color: #f5f5f5;
        }

        .list-view .list-cell:selected {
        -fx-background-color: #e1701a;
        -fx-text-fill: #ffffff;
        }

        .list-view .scroll-bar:vertical {
        -fx-background-color: #4d3428;
        }

        .list-view .scroll-bar:vertical .thumb {
        -fx-background-color: #e1701a;
        }
    </style>
</VBox>