<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="10"
      style="-fx-padding: 20;">

    <Label text="Nouveau Blog" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="150"/>
            <ColumnConstraints prefWidth="300"/>
        </columnConstraints>

        <!-- Titre -->
        <Label text="Titre*:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titreField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Description -->
        <Label text="Description*:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="descrArea" GridPane.rowIndex="1" GridPane.columnIndex="1"
                  prefRowCount="4" wrapText="true"/>

        <!-- Date Publication -->
        <Label text="Date Publication:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="datePubPicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Type -->
        <Label text="Type*:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="typeField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="CrÃ©er" onAction="#createBlog"
            style="-fx-font-size: 14; -fx-pref-width: 100;"/>

    <Label text="* Champs obligatoires" style="-fx-font-style: italic;"/>
</VBox>