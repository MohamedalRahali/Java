<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="controller.AddProduitController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Titre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="titreField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="ID de l'artiste:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="artisteIdField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Prix:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="prixField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Statut:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="statutField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Date de Création:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="dateCreationField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Catégorie ID:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="categorieIdField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Image:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="imageField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Button text="Ajouter" onAction="#handleAddProduit" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>
