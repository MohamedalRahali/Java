<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="esprit.tn.controllers.ClientDashboardController"
      spacing="20" style="-fx-padding: 40; -fx-background-color: #f5f5f5;"
      stylesheets="@styles.css">

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label fx:id="welcomeLabel" text="Bienvenue à la Boutique" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

        <Region HBox.hgrow="ALWAYS" />

        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 5);">

            <Label text="Articles:" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />
            <Label fx:id="panierCountLabel" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" />
            <Button fx:id="voirPanierButton" onAction="#handleVoirPanier" text="Voir le panier" styleClass="btn-info"
                    prefHeight="35" style="-fx-font-size: 14px; -fx-background-radius: 5;" />
        </HBox>

        <Button fx:id="logoutButton" onAction="#handleLogout" text="Déconnexion" styleClass="btn-danger"
                prefWidth="150" prefHeight="40" style="-fx-font-size: 14px; -fx-background-radius: 5;">
            <graphic>

            </graphic>
        </Button>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10; -fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 5);">
        <Label text="Filtrer par catégorie:" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-weight: bold;" />
        <ComboBox fx:id="categorieFilter" prefWidth="250" prefHeight="35" styleClass="combo-box" />
    </HBox>

    <ScrollPane fitToWidth="true" styleClass="edge-to-edge" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
        <VBox spacing="20">
            <Label text="Produits disponibles" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <GridPane fx:id="productsGrid" hgap="20" vgap="20">
                <!-- Les produits seront ajoutés ici dynamiquement -->
            </GridPane>
        </VBox>
    </ScrollPane>
</VBox>